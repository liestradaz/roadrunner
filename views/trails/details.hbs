<h2 class="title is-3 has-text-centered mt-4">Details</h2>

<div class="columns is-flex is-justify-content-center is-mobile">
  <div class="box column is-mobile is-three-fifths">
    <div class="has-text-centered">
      <h3 class="title is-4 mb-3">{{elem.name}}</h3>
    </div>

    <div>
      <div id="map"></div>
    </div>

    <div class="has-text-centered">
      <h4 class="is-size-5 mt-3"><strong>Created by:
        </strong>@{{elem.creator.username}}</h4>

      <div>
        <p class="is-size-5"><strong>Distance</strong> {{elem.distance}}</p>
      </div>

      <div class="columns">
        <div class="column is-flex is-flex-direction-column">
          <h6 class="subtitle is-4 is-size-5 mb-1">Start Point</h6>

          <div>
            <label><i>Latitude</i></label>
            <input
              class="input is-rounded is-small"
              type="text"
              name="startLat"
              id="startlat"
              value={{elem.startPoint.[0]}}
              readonly
            />
          </div>
          <div>
            <label class=""><i>Longitude</i></label>
            <input
              class="input is-rounded is-small"
              type="text"
              name="startLng"
              id="startlng"
              value={{elem.startPoint.[1]}}
              readonly
            />
          </div>
        </div>

        <div class="column is-flex is-flex-direction-column">
          <h6 class="subtitle is-4 is-size-5 mb-1">End Point</h6>
          <div>
            <label for=""><i>Latitude</i></label>
            <input
              class="input is-rounded is-small"
              type="text"
              name="endLat"
              id="endlat"
              value={{elem.endPoint.[0]}}
              readonly
            />
          </div>
          <div>
            <label for=""><i>Longitude</i></label>
            <input
              class="input is-rounded is-small"
              type="text"
              name="endLng"
              id="endlng"
              value={{elem.endPoint.[1]}}
              readonly
            />
          </div>
        </div>
      </div>
    </div>

  </div>


{{!-- Comments Box --}}
  <div class="box column is-mobile">
          {{#each commentsFromRoute}}
    <article class="media">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src={{fromWho.profilePicture}} />
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <p>
            <strong>{{fromWho.username}}</strong>
            <small>31m</small>
            <br />
            {{text}}
          </p>
        </div>
        <nav class="level is-mobile">
          <div class="level-left">
            <a class="level-item">
              <span class="icon is-small"><i class="fas fa-reply"></i></span>
            </a>
            <a class="level-item">
              <span class="icon is-small"><i class="fas fa-retweet"></i></span>
            </a>
            <a class="level-item">
              <span class="icon is-small"><i class="fas fa-heart"></i></span>
            </a>
          </div>
        </nav>
      </div>
      <div class="media-right">
        <form action="/routes/{{../elem._id}}/comment/{{_id}}/delete" method="post">
          <button class="delete"></button>
        </form>
      </div>
    </article>
          {{/each}}

    <article class="media">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src={{authLoggedIn.profilePicture}}>
        </p>
      </figure>
              <form action="/routes/{{elem._id}}/comment" method="post">
      <div class="media-content">
        <div class="field">
          <p class="control">
            <textarea class="textarea" placeholder="Add a comment..." name="text"></textarea>
          </p>
        </div>
        <nav class="level">
          <div class="level-right">
            <div class="level-item">
                <button class="button is-info" type="submit">Submit</button>
              </form>
            </div>
          </div>

        </nav>
      </div>
    </article>


  </div>
</div>

<script
  src="https://maps.googleapis.com/maps/api/js?libraries=drawing,places&key=AIzaSyChdc2N7AHjRp9ERUZmD_SJy68ivwF7qEM"
></script>
<script src="../js/route-details.js"></script>